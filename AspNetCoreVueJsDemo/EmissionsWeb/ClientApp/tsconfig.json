{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [ "dom" ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}